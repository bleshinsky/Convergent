{
  "name": "convergent",
  "version": "0.1.0",
  "description": "Context-aware project management for Obsidian",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "version": "node version-bump.mjs && git add manifest.json versions.json",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write 'src/**/*.ts'"
  },
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "project-management",
    "task-management",
    "productivity",
    "kanban",
    "context-engineering"
  ],
  "author": "Boris Leshinsky",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/bleshinsky/Convergent.git"
  },
  "bugs": {
    "url": "https://github.com/bleshinsky/Convergent/issues"
  },
  "homepage": "https://github.com/bleshinsky/Convergent#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "builtin-modules": "^3.3.0",
    "esbuild": "^0.19.9",
    "eslint": "^8.56.0",
    "obsidian": "latest",
    "prettier": "^3.1.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "moment": "^2.29.4"
  }
}
